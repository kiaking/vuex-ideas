{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,

    "lib": [
      "esnext",
      "dom"
    ],

    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    },

    "types": [
      "jest"
    ]
  },

  "include": [
    "src",
    "__tests__"
  ]
}
